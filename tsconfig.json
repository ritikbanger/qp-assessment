{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["**/*"],
	"exclude": ["./node_modules"],
	"paths": {
		"*": ["./src/types/global.d.ts"]
	},
	"files": ["./src/types/global.d.ts"],
	"lib": ["es2015"]
}
